<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputEmail" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Rounded</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">55dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_create</item>
        <item name="endIconTint">@color/blue</item>
    </style>

    <style name="TextInputLayout.FilledBox.Password" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.ImageButton.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TextInputPassword" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="endIconMode">password_toggle</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Rounded</item>
        <item name="errorEnabled">true
        </item>
    </style>

    <style name="Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_marginLeft">400dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Button1" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_marginLeft">245dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:textSize">20dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="strokeWidth">3dp</item>

    </style>

    <style name="ImageButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:drawableBottom">@drawable/google</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.ImageButton.Rounded</item>
    </style>

    <style name="imageViewIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">52dp</item>
        <item name="android:layout_marginTop">92dp</item>
        <item name="android:background">@drawable/video_calling</item>
    </style>

</resources>